<!DOCTYPE html>
<html lang="en">
        
    <head>

        {{!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script> --}}
        {{!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> --}}
        {{>head}}
        
        {{>headSingleMagnify}}


    </head> 
    
    <body>

        <div class="container-fluid allHeight">
            
            {{>header}}

            <br><br>



            {{!-- TEMPLATE START --}}

            <div class="container-fluid">
                <div class="row">
                    
                    <div class="col">
                        
                        <a href="/"><button class="backButton allShadow"><span>Convert another</span></button></a>
                        <h3 class="text-center rangeText">Select the ZOOM level</h3>
                        <input type="range" class="custom-range" min="1" max="3" value="1" step="0.5" id="zoomRange">
                        <h4 class="text-center rangeText" id="zoomValue">1x</h4>
                        
                        {{!-- IMAGE 1 (original image) --}}
                        <h4 class="text-center imageInfo"><span class="bld">Original: </span>height {{imageHight}}px, width {{imageWidth}}px, size {{imageSize}}bytes </h4>
                        <div class="magnify1">
                            <div class="large1">

                            </div>
                            <img class="small1" src="{{imagePath}}" width="{{sizeWidth}}"/>
                        </div>


                        {{!-- IMAGE 2 (webp image) --}}
                        <h4 class="text-center imageInfo"><span class="bld">WebP: </span>height {{imageHight}}px, width {{imageWidth}}px, size {{webpSize}}bytes </h4>
                        <div class="magnify2">
                            <div class="large2">

                            </div>
                            <img class="small2" src="{{imagePathWebP}}" width="{{sizeWidth}}"/>
                        </div>
                        

                    </div>
                    
                </div>
            </div>

            {{!-- TEMPLATE END --}}



        </div>

        {{>footer}}
        
        {{>scripts}}
        
    </body>

</html>